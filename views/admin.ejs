            .btn-info.focus {
                color: #fff;
                background-color: #222222;
                border-color: #000000;
            }
            
            .btn-info:hover {
                color: #fff;
                background-color: #444444;
                border-color: #000000;
            }
            
            .btn-info:active,
            .btn-info.active,
            .open>.dropdown-toggle.btn-info {
                color: #fff;
                background-color: #222222;
                border-color: #000000;
            }
            
            .navbar-inverse {
                background-color: #000;
                border: 1px solid #555;
            }
            
            .navbar .navbar-brand {
                font-size: 1.1em;
            }
            
            .navbar .navbar-nav p {
                font-size: 0.9em;
            }
            
