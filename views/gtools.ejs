                $('#laserOn').click(function() {
                    socket.emit("command", {
                        command: "M03"
                    });
                })

                $('#laserOff').click(function() {
                    socket.emit("command", {
                        command: "M05"
                    });
                })

                $('#sliderlaser').change(function() {
                    $('#outlaser').text(
                        $('#sliderlaser').val()
                    );
                    var laserpwm = $('#sliderlaser').val()
                    socket.emit("command", {
                        command: "S" + laserpwm
                    });
                    console.log(ymm);
                })


